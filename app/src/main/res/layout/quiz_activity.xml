<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundQuiz">>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundQuiz"
    android:padding="16dp"
    tools:context=".quiz.QuizActivity">

    <TextView
        android:id="@+id/score_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_txt"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="1dp"
        android:fontFamily="@font/creepster"
        android:text="Score: 0"
        android:textColor="@color/colorWHITE"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/question_count_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/creepster"
        android:text="Question: 1/x"
        android:layout_below="@id/score_txt"

        android:textColor="@color/colorWHITE"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="00:30"
        android:fontFamily="@font/creepster"
        android:textColor="@color/colorWHITE"
        android:layout_marginTop="1dp"
        android:textSize="40sp" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_txt"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:background="#030303">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/quizbutton"
            android:fontFamily="@font/creepster"
            android:text="RadioButton"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/radioButton"
            android:layout_marginTop="20dp"
            android:background="@drawable/quizbutton"
            android:fontFamily="@font/creepster"
            android:text="RadioButton"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/radioButton2"
            android:layout_marginTop="20dp"
            android:background="@drawable/quizbutton"
            android:fontFamily="@font/creepster"
            android:text="RadioButton"
            android:textColor="#000000" />

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/radioButton3"
            android:layout_marginTop="20dp"
            android:background="@drawable/quizbutton"
            android:fontFamily="@font/creepster"
            android:text="RadioButton"
            android:textColor="#000000" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_confirm_next"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@id/radio_group"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/quiz_confirm_button"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Confirm" />

    <TextView
        android:id="@+id/question_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/creepster"
        android:text="ddddddddddddd"
        android:textAlignment="center"
        android:textColor="#47A891"
        android:textSize="35sp" />


</RelativeLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rooms.FindRoom"
    android:orientation="vertical"
    android:background="@color/colorBackground"
    android:baselineAligned="false"
    android:gravity="center">

    <ImageView
        android:id="@+id/ivBudynek"
        android:layout_width="wrap_content"
        android:layout_height="232dp"
        android:src="@drawable/ic_classroom" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:text="Wybierz budynek:" />

    <RadioGroup
        android:id="@+id/rgBudynek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbB9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="B9 (LODEX)" />

        <RadioButton
            android:id="@+id/rbB19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="B19 (CTI)" />

        <RadioButton
            android:id="@+id/rbB14"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="B14 (Instytut Fizyki PŁ)" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center"
        android:text="Wyszukaj salę" />

    <EditText
        android:id="@+id/etSala"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:ems="10"
        android:gravity="center"
        android:hint="np F10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="Twoja sala znajduje się na X piętrze w Y."
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btnPokazNaMapie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/my_button"
        android:text="Pokaż na mapie"
        android:textColor="@color/colorWHITE" />

</LinearLayout>